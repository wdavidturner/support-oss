{
  "name": "@support-oss/db",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "typecheck": "tsc --noEmit",
    "lint": "echo 'No lint configured yet'",
    "db:generate": "dotenv -e ../../.env -- drizzle-kit generate",
    "db:migrate": "dotenv -e ../../.env -- drizzle-kit migrate",
    "db:push": "dotenv -e ../../.env -- drizzle-kit push",
    "db:studio": "dotenv -e ../../.env -- drizzle-kit studio",
    "db:seed": "dotenv -e ../../.env -- tsx src/seed.ts"
  },
  "dependencies": {
    "@support-oss/shared": "workspace:*",
    "@vercel/postgres": "^0.10.0",
    "drizzle-orm": "^0.38.3",
    "postgres": "^3.4.5"
  },
  "devDependencies": {
    "dotenv-cli": "^11.0.0",
    "drizzle-kit": "^0.30.1",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3"
  }
}
